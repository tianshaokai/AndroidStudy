<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutPatentMain"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <View
        android:id="@+id/vSizeCamera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/rcvTypeCamera"
        app:layout_constraintTop_toBottomOf="@+id/headerTop"/>
    <View
        android:id="@+id/vSizeCameraHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/headerTop"/>
    <View
        android:id="@+id/vSizeVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/vSizeSquare"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/headerTop"/>
    <RelativeLayout
        android:id="@+id/rlNoPermission"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivImage2"
            android:layout_width="172dp"
            android:layout_height="172dp"
            android:layout_centerHorizontal="true"
            android:elevation="1dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="permission_error.json"
            app:lottie_loop="true"/>
        <com.triversoft.common.text.TextViewMedium
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/colorPrimaryRed"
            android:gravity="center"
            android:id="@+id/tvMedium"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/need_access_permission"
            android:layout_below="@+id/ivImage2"
            app:textColorDefault="false"/>
    </RelativeLayout>
    <com.tianshaokai.camera.view.ViewGesture
        android:id="@+id/vGesture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.otaliastudios.cameraview.CameraView
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cameraAutoFocusMarker="@string/cameraview_default_autofocus_marker"
            app:cameraEngine="camera1"
            app:cameraFlash="off"
            app:cameraGestureTap="autoFocus"
            app:cameraGrid="off"
            app:cameraPreview="glSurface"/>
        <ImageView
            android:id="@+id/imgBlur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/v11"
            android:background="@color/text_dark_tint"
            android:layout_width="20dp"
            android:layout_height="0.5dp"/>
        <View
            android:id="@+id/v22"
            android:background="@color/text_dark_tint"
            android:layout_width="0.5dp"
            android:layout_height="20dp"/>
        <View
            android:layout_gravity="end"
            android:id="@+id/v3"
            android:background="@color/text_dark_tint"
            android:layout_width="20dp"
            android:layout_height="0.5dp"/>
        <View
            android:layout_gravity="end"
            android:id="@+id/v4"
            android:background="@color/text_dark_tint"
            android:layout_width="0.5dp"
            android:layout_height="20dp"/>
        <View
            android:layout_gravity="bottom"
            android:id="@+id/v5"
            android:background="@color/text_dark_tint"
            android:layout_width="0.5dp"
            android:layout_height="20dp"/>
        <View
            android:layout_gravity="bottom"
            android:id="@+id/v6"
            android:background="@color/text_dark_tint"
            android:layout_width="20dp"
            android:layout_height="0.5dp"/>
        <View
            android:layout_gravity="end|bottom"
            android:id="@+id/v7"
            android:background="@color/text_dark_tint"
            android:layout_width="0.5dp"
            android:layout_height="20dp"/>
        <View
            android:layout_gravity="end|bottom"
            android:id="@+id/v8"
            android:background="@color/text_dark_tint"
            android:layout_width="20dp"
            android:layout_height="0.5dp"/>

    </com.tianshaokai.camera.view.ViewGesture>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/gd1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.2"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/gd2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.4"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/gd3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.6"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/gd4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.8"/>
    <View
        android:id="@+id/colorHeader"
        android:background="@color/color_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toStartOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header"/>
    <View
        android:background="@drawable/bg_gradien_top_full"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/vSizeSquare"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:background="@drawable/bg_gradien_bot_full"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header"/>
    <com.triversoft.common.text.TextViewMedium
        android:textSize="@dimen/text_size_11"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tvZoom"
        android:background="@drawable/bg_tv_zoom"
        android:layout_width="@dimen/img_size_small_32"
        android:layout_height="@dimen/img_size_small_32"
        android:text="1x"
        android:backgroundTint="@color/transparent_80"
        app:layout_constraintBottom_toTopOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:textColorDefault="false"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerTop"
        android:paddingLeft="@dimen/space_screen_small"
        android:paddingTop="4dp"
        android:paddingRight="@dimen/space_screen_small"
        android:paddingBottom="4dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/space_screen_small"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/imgFlashOut"
            android:tag="2"
            android:padding="@dimen/img_padding_large_10"
            android:layout_width="@dimen/img_size_normal_42"
            android:layout_height="@dimen/img_size_normal_42"
            android:src="@drawable/ic_flash_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/imgFlashVideo"
            android:tag="0"
            android:padding="@dimen/img_padding_large_10"
            android:visibility="invisible"
            android:layout_width="@dimen/img_size_normal_42"
            android:layout_height="@dimen/img_size_normal_42"
            android:src="@drawable/ic_flash_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/imgShowHeader"
            android:tag="0"
            android:padding="8dp"
            android:layout_width="@dimen/img_size_normal_42"
            android:layout_height="@dimen/img_size_normal_42"
            android:src="@drawable/bg_ripple_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutTime"
            android:background="@drawable/bg_border_timmer"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/img_size_small_22"
            android:minWidth="@dimen/img_size_large"
            app:layout_constraintBottom_toBottomOf="@+id/imgSetting"
            app:layout_constraintRight_toLeftOf="@+id/imgSetting"
            app:layout_constraintTop_toTopOf="@+id/imgSetting">
            <ImageView
                android:id="@+id/imgTime"
                android:layout_width="@dimen/img_size_small_16"
                android:layout_height="@dimen/img_size_small_16"
                android:src="@drawable/timer"
                android:layout_marginStart="@dimen/img_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white"/>
            <TextView
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tvTime"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="3s"
                android:layout_marginEnd="@dimen/img_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imgTime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/imgSetting"
            android:tag="2"
            android:padding="@dimen/img_padding_large"
            android:layout_width="@dimen/img_size_normal_42"
            android:layout_height="@dimen/img_size_normal_42"
            android:src="@drawable/ic_setting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/tvTimeVideo"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/tvQualityVideo"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HD - 60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.triversoft.common.text.TextViewMedium
        android:textSize="@dimen/text_size_11"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tvZoomVideo"
        android:background="@drawable/bg_tv_zoom"
        android:visibility="invisible"
        android:layout_width="@dimen/img_size_small_32"
        android:layout_height="@dimen/img_size_small_32"
        android:layout_marginBottom="16dp"
        android:text="1x"
        app:layout_constraintBottom_toTopOf="@+id/rcvTypeCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:textColorDefault="false"/>
    <com.tech.catti_camera.views.HeaderCamera
        android:id="@+id/header"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.1"
        app:layout_constraintBottom_toTopOf="@+id/vBgBottom"/>
    <com.tech.catti_camera.views.SnappyRecyclerView
        android:orientation="horizontal"
        android:id="@+id/rcvTypeCamera"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/vBgBottom"/>
    <View
        android:id="@+id/v1"
        android:layout_width="260dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/vBgBottom"
        app:layout_constraintEnd_toStartOf="parent"/>
    <View
        android:id="@+id/v2"
        android:layout_width="260dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/vBgBottom"
        app:layout_constraintStart_toEndOf="parent"/>
    <com.triversoft.common.text.TextViewRegular
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/black"
        android:id="@+id/tvTypeFilter"
        android:background="@drawable/bg_boder_white"
        android:paddingLeft="@dimen/img_padding"
        android:paddingTop="2dp"
        android:paddingRight="@dimen/img_padding"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:text="@string/filter_normal"
        android:paddingHorizontal="@dimen/img_padding"
        android:paddingVertical="2dp"
        app:layout_constraintBottom_toTopOf="@+id/vBgBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <include
        android:id="@+id/viewFilter"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/v2"
        app:layout_constraintStart_toStartOf="@+id/v1"
        layout="@layout/view_preview_filter"/>
    <View
        android:id="@+id/lineBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/space_screen_normal"
        app:layout_constraintBottom_toTopOf="@+id/imCapture"/>
    <View
        android:id="@+id/vBgBottom"
        android:background="@color/black"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lineBottom"/>
    <ImageView
        android:id="@+id/imCapture"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:layout_width="@dimen/img_size_largest"
        android:layout_height="@dimen/img_size_largest"
        android:layout_marginBottom="@dimen/space_screen_normal"
        android:src="@drawable/ic_take_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.tech.catti_camera.views.SemiCircleView
        android:id="@+id/progressSlowVideo"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imCapture"
        app:layout_constraintEnd_toEndOf="@+id/imCapture"
        app:layout_constraintStart_toStartOf="@+id/imCapture"
        app:layout_constraintTop_toTopOf="@+id/imCapture"/>
    <ImageView
        android:id="@+id/imChangeCamera"
        android:background="@drawable/bg_header"
        android:padding="@dimen/img_padding"
        android:layout_width="@dimen/img_size_normal_42"
        android:layout_height="@dimen/img_size_normal_42"
        android:src="@drawable/ic_switch_camera"
        android:layout_marginEnd="@dimen/space_screen_small"
        app:layout_constraintBottom_toBottomOf="@+id/imCapture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imCapture"/>
    <ImageView
        android:id="@+id/imImageRecent"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="@dimen/img_size_large"
        android:layout_height="@dimen/img_size_large"
        android:src="@drawable/ic_image_default"
        android:layout_marginStart="@dimen/space_screen_small"
        app:layout_constraintBottom_toBottomOf="@+id/imCapture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imCapture"/>
    <FrameLayout
        android:id="@+id/flTime"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/vBgBottom"
        app:layout_constraintTop_toTopOf="parent">
        <com.triversoft.common.text.TextViewMedium
            android:textSize="100sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <View
        android:id="@+id/viewTopSquare"
        android:background="@color/black"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/vSizeSquare"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
